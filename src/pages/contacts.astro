---
import Layout from '../layouts/Layout.astro';


type Language = 'en' | 'el';
interface data {
	title: string;
	description: string,
	lang: Language
}

const data = {
	title: 'Επικοινωνήστε με το Μετρό Θεσσαλονίκης',
	description: "Επικοινωνήστε με την ομάδα του Μετρό Θεσσαλονίκης για ερωτήσεις, υποστήριξη ή σχόλια σχετικά με το σύστημα και τις υπηρεσίες του μετρό.",
	lang: "el" as Language,
}

---

<Layout title={data.title}  description={data.description}>
	<main>
        <h1>{data.title}</h1>
	</main>
</Layout>
