---
import Layout from '../layouts/Layout.astro';


type Language = 'en' | 'el';
interface data {
	title: string;
	description: string,
	lang: Language
}

const data = {
	title: 'Νέα & Ενημερώσεις Μετρό Θεσσαλονίκης',
	description: "Μείνετε ενημερωμένοι με τα τελευταία νέα και εξελίξεις σχετικά με το Μετρό Θεσσαλονίκης, συμπεριλαμβανομένων ενημερώσεων υπηρεσιών και προόδου του έργου.",
	lang: "el" as Language,
}

---

<Layout title={data.title}  description={data.description}>
	<main>
        <h1>{data.title}</h1>
	</main>
</Layout>
